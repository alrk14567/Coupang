<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nc13.mappers.ButMapper">

    <select id="selectAll" parameterType="int" resultType="buyDTO">
        SELECT * FROM buy
        INNER JOIN user
        ON user.id=buy.user_id
        INNER JOIN product
        ON product.id=buy.product_id
        WHERE buy.user_id=#{userId}
    </select>

    <select id="selectOne" parameterType="int" resultType="buyDTO">
        SELECT * FROM buy
        INNER JOIN user
        ON user.id=buy.user_id
        INNER JOIN product
        ON product.id=buy.product_id
        WHERE buy.id=#{id}
    </select>

    <insert id="insert" parameterType="buyDTO">
        INSERT INTO buy(user_id,product_id,price,amount,fare)
        VALUES(#{userId},#{productId},#{price},#{amount},#{fare})
    </insert>

    <delete id="delete" parameterType="int">
        DELETE FROM buy
        WHERE id=#{id}
    </delete>

    <select id="totalPrice" parameterType="int" resultType="int">
        SELECT SUM(price) FROM buy
        WHERE user_id=#{userId}
    </select>
</mapper>